{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "lib": ["es2017", "dom"],
    "moduleResolution": "Node",
    "allowJs": true,
    "outDir": "tmp",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
